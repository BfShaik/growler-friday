    },
    "browserify": {
      "transform": [
        "browserify-shim"
      ]
    },
    "devDependencies": {
        "grunt": "~0.4.2",
        "grunt-contrib-uglify": "~0.3.2",
        "grunt-contrib-watch": "~0.5.3",
        "grunt-contrib-sass": "~0.7.2",
        "grunt-contrib-coffee": "~0.10.1",
        "grunt-contrib-imagemin": "~0.7.0",
        "grunt-newer": "~0.7.0",
        "grunt-rigger": "0.4.x",
        "grunt-bower-task": "0.4.0",
        "grunt-browserify": "2.1.4",
        "browserify": "~3.44.2",
        "browserify-shim": "~3.4.1"
    }
}
