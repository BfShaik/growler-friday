{
    "name": "site-start",
    "version": "0.1.0",
    "author": "Staplegun.US",
    "homepage": "https://github.com/Staplegun-US/site-start",
    "repository" : {
      "type"  : "git",
      "url"   : "https://github.com/Staplegun-US/site-start"
    },
    "browser": {
          "jquery": "./src/requires/jquery/js/jquery.min.js",
          "underscore": "./src/requires/underscore/js/underscore.js",
          "modernizr": "./src/requires/modernizr/modernizr.js"
    },
    "browserify-shim": {
          "jquery": "$",
          "underscore": "_",
